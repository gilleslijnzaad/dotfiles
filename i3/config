# multiple monitors
exec_always --no-startup-id ~/.screenlayout/monitorAbove.sh
bindsym $mod+Shift+comma  move workspace to output up
bindsym $mod+Shift+period move workspace to output down

# i3lock
bindsym $mod+Shift+x exec i3lock

